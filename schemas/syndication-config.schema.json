{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Syndication Configuration",
  "description": "Configuration for blog post syndication to external platforms",
  "type": "object",
  "properties": {
    "platforms": {
      "type": "object",
      "description": "Platform-specific configuration",
      "properties": {
        "hashnode": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether Hashnode syndication is enabled"
            },
            "publicationId": {
              "type": "string",
              "description": "Your Hashnode publication ID"
            },
            "supportsBackdating": {
              "type": "boolean",
              "description": "Whether the platform supports backdating posts"
            }
          },
          "required": ["enabled"]
        },
        "devto": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether Dev.to syndication is enabled"
            },
            "supportsBackdating": {
              "type": "boolean",
              "description": "Whether the platform supports backdating posts"
            }
          },
          "required": ["enabled"]
        }
      }
    },
    "filters": {
      "type": "object",
      "description": "Filters for determining which posts to syndicate",
      "properties": {
        "includedTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "If non-empty, only posts with these tags will be syndicated"
        },
        "excludedTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Posts with these tags will not be syndicated"
        },
        "includedCategories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "If non-empty, only posts with these categories will be syndicated"
        },
        "excludedCategories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Posts with these categories will not be syndicated"
        }
      }
    },
    "defaults": {
      "type": "object",
      "description": "Default syndication settings",
      "properties": {
        "syndicateByDefault": {
          "type": "boolean",
          "description": "Whether to syndicate posts by default (can be overridden per post)"
        },
        "canonicalUrlBase": {
          "type": "string",
          "description": "Base URL for canonical links"
        }
      }
    }
  },
  "required": ["platforms", "defaults"]
}
